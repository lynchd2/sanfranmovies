<h1 class= "text-center"> Edit your information here</h1>
<div class= "container">
  <%= form_for @user, class: "form-group" do |f| %>
    <div class= "col-md-12 sign-up-field">
      <%= f.label "First Name" %>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %></br>
    </div>
    <div class=" col-md-12 sign-up-field">
      <%= f.label "Last Name" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %></br>
    </div>
    <div class=" col-md-12 sign-up-field">
      <%= f.label "Street Number" %>
      <%= f.number_field :number_street, placeholder: "Street number", class: "form-control" %></br>
    </div>
    <div class=" col-md-12 sign-up-field">
      <%= f.label "Street Number" %>
      <%= f.text_field :street, placeholder: "Street name", class: "form-control" %></br>
    </div>
    <div class=" col-md-12 sign-up-field">
      <%= f.label "Street Suffix(Ave, Street, etc)" %>
      <%= f.text_field :street_suffix, placeholder: "Street Suffix", class: "form-control" %></br>
    </div>
    <div class= "col-md-12 sign-up-field">
      <%= f.label "Email" %>
        <%= f.text_field :email, placeholder: "Email", class: "form-control" %></br>
    </div>
    <div class="col-md-6">
      <%= f.submit "Update!", class: "btn btn-success sign-up-field text-center" %></br>
    </div>
  <% end %>
</div></br></br>